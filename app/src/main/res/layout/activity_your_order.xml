<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderViewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="18dp">
    tools:context=".YourOrderActivity">

    <TextView
        android:id="@+id/totalAmount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="602dp" />

    <TextView
        android:id="@+id/salesTaxAmount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="575dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total:"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="602dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sales tax:"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="575dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="165dp"
        android:layout_height="55dp"
        android:text="Your Order"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="39dp" />

    <ListView
        android:id="@+id/orderList"
        android:layout_width="346dp"
        android:layout_height="388dp"
        android:layout_marginBottom="248dp"
        android:background="#E6E6E6"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sub-total:"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="548dp" />

    <TextView
        android:id="@+id/subTotalAmount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/placeOrder"
        android:layout_width="150dp"
        android:layout_height="73dp"
        android:text="Place Order"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="642dp" />

    <Button
        android:id="@+id/removeItem"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:text="Remove Selected Item"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="483dp" />

</androidx.constraintlayout.widget.ConstraintLayout>